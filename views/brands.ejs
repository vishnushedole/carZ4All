    <h1 class="firstHeading">Book Your Dream Car Now!!</h1>
    <div class="grid-container">
    <% if(results.length!=0){ %>
        <% for(product of results){ %>
    <div class="card">
        <div class="imgBx">
            <img src="<%=product.imageUrl%>" id="cardimg" height="260" width="445">
        </div>
        <div class="contextBx">
            <h2><%=product.carname %></h2>
            <h3>Model: <%=product.model %></h2>
            <h3 class="price"><small>Price:Rs <%=product.price%></small></h3>
            <form method="GET" action ="/book">
                <input type="hidden" value="<%=product.carname%>" name="name">
                <input type="hidden" value="<%=product.model%>" name="model">
                <input type="hidden" value="<%=product.price%>" name="price">
                <input type="submit" value="Book now">
            </form>
        </div>
       
    </div>


<div class="card" >
        <img src="<%= product.imageurl %>" class="card-img" alt="car-image" height="260" width="445">
        <div class="card-body">
          <h3 class="card-title"><%= product.carname %></h3>
          <!-- <div class="disc"> -->
          <h4 class="card-text"><%= product.model %></h4>
          <h4 class="card-text" style="color:grey"><i class="fa-solid fa-gas-pump"></i> <%= product.Fuel %></h4>
          <h4 class="card-text" style="color:rgb(50, 48, 48)"><i class="fa-solid fa-indian-rupee-sign"></i><%= product.price %></h4>
          <!-- </div> -->
        </div>
          <form method="GET">
            <input type="hidden" value="<%=product.id%>" name="id">
            <input type="hidden" value="<%=product.carname%>" name="name">
            <input type="hidden" value="<%=product.model%>" name="model">
            <input type="hidden" value="<%=product.price%>" name="price">
            <button class="btn" formaction="/book">Book</button>
          <button class="btn" formaction="/viewcar">View</button>
          </form>
          
        
      </div>


    <% } %>
      <% }else { %>
        <div style="position: relative; left:90%; top:10%">
       <h1 style="font-size:45px;">Cars Not Found!</h1>
       </div>
       <% } %>
</div>
