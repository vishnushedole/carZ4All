     <input type="text" name="seats" id="seats" class="inp" value="<%= product[0].seats %>"> 
        </div>
        <div>
            <label class="lbl">colors    </label>
     <input type="text" name="colors" id="colors" class="inp" value="<%= product[0].colors %>"> 
        </div>
        <div>
            <label class="lbl">Fuel    </label>
     <input type="text" name="fuel" id="fuel" class="inp" value="<%= product[0].Fuel %>"> 
        </div>
        <div>
            <label class="lbl">Launch_year    </label>
     <input type="text" name="launch_year" id="launch_year" class="inp" value="<%= product[0].Launch_year %>"> 
        </div>
        <div>
            <label class="lbl">Category    </label>
     <input type="text" name="category" id="category" class="inp" value="<%= product[0].category %>"> 
        </div>
        <div>
        <label class="lbl">interior(img1)    </label>
        <input type="text" name="Iimg1" id="Iimg1" class="inp" value="<%= product[0].Iimg1 %>"> 
           </div>
           <div>
               <label class="lbl">interior(img2)     </label>
        <input type="text" name="Iimg2" id="Iimg2" class="inp" value="<%= product[0].Iimg2 %>"> 
           </div>
           <div>
               <label class="lbl">interior(img3)     </label>
        <input type="text" name="Iimg3" id="Iimg3" class="inp" value="<%= product[0].Iimg3 %>"> 
           </div>
           <div>
               <label class="lbl">exterior(img1)     </label>
        <input type="text" name="Eimg1" id="Eimg1" class="inp" value="<%= product[0].Eimg2 %>"> 
           </div>
           <div>
               <label class="lbl">exterior(img2)     </label>
        <input type="text" name="Eimg2" id="Eimg2" class="inp" value="<%= product[0].Eimg2 %>"> 
           </div>
           <div>
               <label class="lbl">exterior(img3)    </label>
        <input type="text" name="Eimg3" id="Eimg3" class="inp" value="<%= product[0].Eimg2 %>"> 
           </div>
            <input type="hidden" name="id" value="<%= product[0].id%>" >
            <input type="submit" value="SAVE" class="admin-btn">
        </form>


